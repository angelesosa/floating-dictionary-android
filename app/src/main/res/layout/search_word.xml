<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translation – English–Spanish dictionary"
            android:textColor="@color/secondaryText"
            android:textSize="14sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/secondaryText" />

        <TextView
            android:id="@+id/lbl_word_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/secondaryText"
            android:textSize="35sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lbl_word_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/secondaryText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_word_pron_uk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondaryTextLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lbl_word_pron_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondaryTextLight"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="UK"
                android:textColor="@color/secondaryText" />

            <ImageButton
                android:id="@+id/btn_pron_uk_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:src="@drawable/volume_high" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="US"
                android:textColor="@color/secondaryText" />

            <ImageButton
                android:id="@+id/btn_pron_us_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:src="@drawable/volume_high" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/secondaryTextLight" />

        <TextView
            android:id="@+id/lbl_word_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextClear"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/search_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_expanded"
        android:gravity="center"
        android:text="..."
        android:textColor="@color/secondaryText"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone"/>

</FrameLayout>
